{
  "name": "@foxy.io/elements",
  "version": "0.2.0",
  "description": "E-commerce web components by Foxy.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Foxy/foxy-elements.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "wca": "wca analyze \"src/elements/public/*/index.ts\" --outFile custom-elements.json",
    "wca:watch": "onchange \"src/**/*.ts\" -- npm run wca",
    "cpx": "cpx \"src/**/*.stories.mdx\" dist",
    "cpx:watch": "cpx \"src/**/*.stories.mdx\" dist --watch",
    "storybook": "concurrently --kill-others \"ttsc --watch\" \"npm run cpx:watch\" \"npm run wca:watch\" \"start-storybook\"",
    "storybook:build": "npm run lint && rimraf dist && ttsc && npm run cpx && npm run wca && build-storybook",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "ttsc && karma start --coverage",
    "test:watch": "concurrently --kill-others \"ttsc --watch\" \"karma start --auto-watch=true --single-run=false\"",
    "test:update-snapshots": "ttsc && karma start --update-snapshots",
    "test:prune-snapshots": "ttsc && karma start --prune-snapshots",
    "prepack": "npm run lint && rimraf dist && ttsc && node postbuild.js && rollup -c"
  },
  "dependencies": {
    "@open-wc/scoped-elements": "^1.1.1",
    "@open-wc/testing": "^2.5.18",
    "@polymer/iron-iconset-svg": "^3.0.1",
    "@vaadin/router": "^1.7.2",
    "@vaadin/vaadin": "^15.0.6",
    "i18next": "^19.5.1",
    "i18next-browser-languagedetector": "^5.0.0",
    "i18next-chained-backend": "^2.0.1",
    "i18next-http-backend": "^1.0.15",
    "i18next-localstorage-backend": "^3.1.1",
    "is-in-browser": "^1.1.3",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2",
    "lodash-es": "^4.17.15",
    "xstate": "^4.10.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.11.0",
    "@open-wc/demoing-storybook": "^2.3.14",
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/karma-esm": "^3.0.1",
    "@open-wc/testing-karma": "^4.0.1",
    "@rollup/plugin-babel": "^5.1.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@types/lodash-es": "^4.17.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^3.7.1",
    "@typescript-eslint/parser": "^3.7.1",
    "@xstate/test": "^0.4.0",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "autoprefixer": "^9.8.6",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "change-case": "^4.1.1",
    "concurrently": "^5.1.0",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.1",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^4.2.5",
    "karma": "^5.1.0",
    "lint-staged": "^10.2.11",
    "onchange": "^7.0.2",
    "postcss": "^7.0.32",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.23.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-inject-process-env": "^1.3.0",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-terser": "^6.1.0",
    "tailwindcss": "^1.4.6",
    "ts-node": "^8.10.2",
    "tslib": "^2.0.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.7",
    "web-component-analyzer": "^1.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
