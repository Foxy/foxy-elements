{
  "name": "@foxy.io/elements",
  "version": "0.0.0",
  "description": "E-commerce web components by Foxy.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Foxy/foxy-elements.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "wca": "wca analyze \"src/elements/public/*/index.ts\" --outFile custom-elements.json",
    "cpx": "cpx \"src/static/**/*.*\" \"dist/cdn\"",
    "storybook": "start-storybook -s ./src/static -p 8000",
    "storybook:build": "build-storybook -s ./src/static",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "npm run format:eslint && npm run format:prettier",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "wtr src/**/*.test.ts",
    "test:watch": "wtr src/**/*.test.ts --watch",
    "prepack": "npm run lint && rimraf dist && ttsc && node postbuild.js && rollup -c && npm run cpx"
  },
  "dependencies": {
    "@foxy.io/sdk": "^1.0.0-beta.13",
    "@open-wc/lit-helpers": "^0.3.11",
    "@open-wc/scoped-elements": "1.2.1",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/paper-spinner": "^3.0.2",
    "@vaadin/vaadin": "^15.0.6",
    "dedent": "^0.7.0",
    "dexie": "^3.0.3",
    "email-validator": "^2.0.4",
    "halson": "^3.0.0",
    "i18next": "^19.7.0",
    "i18next-http-backend": "^1.0.18",
    "indexeddb-export-import": "^2.1.2",
    "jsonata": "^1.8.3",
    "lit-element": "^2.4.0",
    "lodash-es": "^4.17.15",
    "service-worker-router": "^1.7.5",
    "traverse": "^0.6.6",
    "xstate": "^4.16.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "2.5.32",
    "@rollup/plugin-babel": "^5.2.3",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.4",
    "@storybook/addon-actions": "^6.1.11",
    "@storybook/addon-essentials": "^6.1.11",
    "@storybook/addon-links": "^6.1.11",
    "@storybook/web-components": "^6.1.11",
    "@types/lodash-es": "^4.17.3",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.6.3",
    "@types/resize-observer-browser": "^0.1.4",
    "@types/traverse": "^0.6.32",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "@web/dev-server": "0.1.7",
    "@web/dev-server-esbuild": "0.2.11",
    "@web/dev-server-rollup": "^0.3.2",
    "@web/test-runner": "0.12.14",
    "@xstate/test": "^0.4.1",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "autoprefixer": "^9.8.6",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "change-case": "^4.1.1",
    "core-js": "^3.6.5",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "deepmerge": "^4.2.2",
    "eslint": "^7.8.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-sort-class-members": "^1.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.3.0",
    "lit-html": "^1.3.0",
    "postcss": "^7.0.32",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.9",
    "rollup-plugin-multi-input": "^1.1.1",
    "rollup-plugin-terser": "^7.0.1",
    "semantic-release": "^17.2.2",
    "sinon": "^9.0.2",
    "tailwindcss": "^1.7.6",
    "ts-node": "^9.0.0",
    "tslib": "2.1.0",
    "ttypescript": "^1.5.11",
    "typescript": "4.1.3",
    "web-component-analyzer": "^1.1.6"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run format"
    ]
  },
  "release": {
    "branches": [
      "main",
      {
        "name": "beta",
        "prerelease": true
      }
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
