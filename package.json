{
  "name": "foxy-elements",
  "version": "0.0.0",
  "description": "E-commerce web components by Foxy.",
  "repository": {
    "type": "git",
    "url": "https://github.com/Foxy/foxy-elements.git"
  },
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "watch": {
    "tailwindcss:build": {
      "patterns": [
        "src"
      ],
      "ignore": "src/common/tailwind.ts",
      "extensions": "ts"
    }
  },
  "scripts": {
    "start": "concurrently --kill-others --names tsc,es-dev-server \"npm run tsc:watch\" \"es-dev-server\"",
    "build": "rimraf dist && ttsc",
    "postbuild": "node postbuild.js",
    "tsc:watch": "rimraf dist && ttsc --watch",
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "npm run build && karma start --coverage",
    "test:watch": "npm run build && concurrently --kill-others --names tsc,karma \"ttsc --watch\" \"karma start --auto-watch=true --single-run=false\"",
    "test:update-snapshots": "npm run build && karma start --update-snapshots",
    "test:prune-snapshots": "npm run build && karma start --prune-snapshots"
  },
  "dependencies": {
    "@open-wc/testing": "^2.5.18",
    "@vaadin/vaadin": "^15.0.6",
    "i18next": "^19.5.1",
    "i18next-browser-languagedetector": "^5.0.0",
    "i18next-http-backend": "^1.0.15",
    "is-in-browser": "^1.1.3",
    "lit-element": "^2.2.1",
    "lit-html": "^1.1.2",
    "lodash-es": "^4.17.15",
    "xstate": "^4.10.0"
  },
  "devDependencies": {
    "@open-wc/eslint-config": "^2.0.0",
    "@open-wc/karma-esm": "^2.16.16",
    "@open-wc/testing-karma": "^3.4.6",
    "@types/lodash-es": "^4.17.3",
    "@types/mocha": "^7.0.2",
    "@types/node": "13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "@zoltu/typescript-transformer-append-js-extension": "^1.0.1",
    "autoprefixer": "^9.8.0",
    "concurrently": "^5.1.0",
    "cssnano": "^4.1.10",
    "deepmerge": "^3.3.0",
    "es-dev-server": "^1.23.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "karma": "^5.1.0",
    "lint-staged": "^8.0.0",
    "npm-watch": "^0.6.0",
    "postcss": "^7.0.32",
    "prettier": "^2.0.4",
    "rimraf": "^2.6.3",
    "tailwindcss": "^1.4.6",
    "ts-node": "^8.10.2",
    "tslib": "^1.11.0",
    "ttypescript": "^1.5.10",
    "typescript": "~3.8.2"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}
